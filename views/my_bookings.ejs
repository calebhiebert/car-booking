<!DOCTYPE html>
<html lang="en">
<head>
    <title>My Bookings</title>
    <% include head.ejs %>
</head>
<body>
<% include nav.ejs %>
<div class="container mt-3">
    <h4>Unfinished Bookings</h4>
    <div class="list-group">
        <% for(bk of bookings) { %>
        <% if(bk.status === 'ACTIVE') { %>
            <a href="/booking/<%= bk.id %>" class="list-group-item list-group-item-action justify-content-between">
                <b><%= bk.vehicle.name %></b>
            </a>
        <% } %>
        <% } %>
    </div>

    <h4 class="mt-3">Old Bookings</h4>
    <div class="list-group">
        <% for(bk of bookings) { %>
        <% if(bk.status === 'FINISHED') { %>
        <a href="/booking/<%= bk.id %>" class="list-group-item list-group-item-action justify-content-between">
            <b><%= bk.vehicle.name %></b>
        </a>
        <% } %>
        <% } %>
    </div>
</div>
<% include scripts.ejs %>
</body>
</html>